{% extends "./layout.njk" %}

{% block content %}

<div class="title">
  <h2>Membros</h2>

  <form action="/search" method="GET">
    <input type="text" name="filter">
    <button type="submit">Procurar</button>
  </form>
</div>

<div class="card-container">
  {% for user in users %}
    <div class="card-member">
      <a href="/users/{{user.login}}">
        <img src="{{user.avatar_url}}">
      </a>
      <p>{{user.login}}</p>
    </div>
  {% endfor %}
</div>

{% endblock %}